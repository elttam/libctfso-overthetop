#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>

#define FLAG "{{ flag_path }}"

void (*fn)(char *);

void read_flag()
{
	int fd = -1;
	char buf[512] = {0};

	fd = open(FLAG, O_RDONLY);
	if(fd == -1) {
		return;
	}

	read(fd, &buf, sizeof(buf)-1);
	printf("%s\n", buf);
	close(fd);
	exit(0);
}

void say_message(char *p)
{
	char buffer[256];

	memset(&buffer, 0x00, sizeof(buffer));
	snprintf(buffer, sizeof(buffer)-1, "%s", p);
	printf(buffer);
	putchar('\n');
	return;
}

int main(int argc, char **argv)
{
	if(argc <= 1) {
		printf("%s <name>\n", argv[0] == NULL ? "./challenge" : argv[0]);
		exit(1);
	}

	fn = &say_message;
	fn("Hello World! Your message of the day is:");
	fn(argv[1]);
	fn("Goodbye :)");

	return 0;
}

